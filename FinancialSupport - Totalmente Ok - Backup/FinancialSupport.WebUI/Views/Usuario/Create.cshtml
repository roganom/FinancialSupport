@model FinancialSupport.Application.DTOs.UsuarioDTO
@{
    ViewData["Title"] = "Cadastramento de novo cliente";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label">Nome Completo</label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-horizontal">
                <label asp-for="Foto" class="col-md-2 control-label">Foto</label>
                <div class="col-md-10">
                    <input asp-for="Foto" class="form-control" placeholder="nome do arquivo" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Limite" class="col-md-2 control-label">Limite total</label>
            <div class="col-md-10">
                <input asp-for="Limite" class="form-control" />
            </div>
        </div>
        <hr />
        <div class"form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" name="UsuarioCriacao" value="@Context.User.Identity.Name" />
                <input type="submit" value="Cadastrar" action="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info"> Voltar para a lista</a>
            </div>
        </div>
    </div>
</form>