@model List<FinancialSupport.Application.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Gerenciamento de clientes";
}

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12 pull-left">
        <a asp-action="Create" class="btn btn-primary">
            <span title="Create" class="fas fa-plus"></span> Novo cliente
        </a>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Limite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].LimiteDisponivel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Foto)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Limite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LimiteDisponivel)
                    </td>
                 <td>
                        @Html.DisplayFor(modelItem => item.Foto)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fas fa-edit">Alterar</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Excluir</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
