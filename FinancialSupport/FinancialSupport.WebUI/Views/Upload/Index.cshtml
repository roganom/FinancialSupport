@{
    ViewData["Title"] = "Home Page";
}
<h1>Envio de arquivo de foto</h1>
<hr/>
<div class="jumbotrom jumbotron-fluid">
    <div class="continer">
        <div class="row">
            <section>
                <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="EnviarArquivo">
                    <div class="form-group">
                        <div class="col-md-10">
                           <p>
                                Envio de arquivo de imagem:
                            </p>
                            <input type="file" name="arquivo" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" name="Enviar Arquivo" />
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>