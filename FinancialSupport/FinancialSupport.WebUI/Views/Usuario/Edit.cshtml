@model FinancialSupport.Application.DTOs.UsuarioDTO

<h3>Alteração de dados de usuários</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limite" class="control-label"></label>
                <input asp-for="Limite" class="form-control" />
                <span asp-validation-for="Limite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimiteDisponivel" class="control-label"></label>
                <input asp-for="LimiteDisponivel" class="form-control" />
                <span asp-validation-for="LimiteDisponivel" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info"> Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

